---
import Icon from "../assets/icon.png"
import Image from "astro/components/Image.astro"
---
<footer class="footer">
  <div class="footer-container">
    <!-- IZQUIERDA -->
    <div class="footer-brand">
      <div class="footer-logo">
        <Image src={Icon} alt="Logo" class="footer-icon" />
        <div class="footer-title">
          <span class="footer-name-primary">Bungalows</span>
          <span class="footer-name-secondary">El Cuaco</span>
        </div>
      </div>
      <div class="footer-legal">
        <p>© 2026 Nalek. All rights reserved.</p>
        <p>Nalekstudio@gmail.com</p>
      </div>
    </div>

    <!-- CENTRO -->
    <nav class="footer-links" aria-label="Footer navigation">
      <a href="#inicio">Inicio</a>
      <a href="#nosotros">Nosotros</a>
      <a href="#servicios">Servicios</a>
      <a href="#ubicacion">Ubicación</a>
      <a href="#contacto">Contacto</a>
    </nav>

    <!-- DERECHA -->
    <div class="footer-company">
      <h4>Desarrollado por</h4>
      <p>Nalek</p>
      <p>Nalekstudio@gmail.com</p>
      <p>+54 9 3405 430-262</p>
    </div>
  </div>

  <div class="footer-bottom">
    <p>@Nalek, Santa Fe, Argentina</p>
  </div>
</footer>

<style>
  .footer {
    background: #3E2A1F;
    color: #F5F3EE;
  }

  .footer-container {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: start;
    gap: 3rem;
    max-width: 1100px;
    margin: 0 auto;
    padding: 4rem 4vw 3rem;
  }

  /* IZQUIERDA */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }

  .footer-icon {
    width: 44px;
    height: auto;
  }

  .footer-title {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }

  .footer-name-primary {
    font-size: 1rem;
    font-weight: 300;
    color: #F5F3EE;
    letter-spacing: 0.5px;
  }

  .footer-name-secondary {
    font-family: 'Playfair Display', serif;
    font-size: 1.1rem;
    color: #c9a882;
  }

  .footer-legal p {
    font-size: 0.85rem;
    opacity: 0.65;
    margin-bottom: 0.3rem;
    line-height: 1.5;
  }

  /* CENTRO */
  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    align-items: center;
    text-align: center;
    padding: 0 2.5rem;
    border-left: 1px solid rgba(245,243,238,0.15);
    border-right: 1px solid rgba(245,243,238,0.15);
  }

  .footer-links a {
    text-decoration: none;
    color: #F5F3EE;
    font-size: 0.95rem;
    letter-spacing: 1px;
    opacity: 0.8;
    transition: opacity 0.3s ease, transform 0.3s ease, color 0.3s ease;
  }

  .footer-links a:hover {
    opacity: 1;
    color: #c9a882;
    transform: translateY(-2px);
  }

  /* DERECHA */
  .footer-company {
    justify-self: end;
    text-align: right;
  }

  .footer-company h4 {
    font-family: 'Playfair Display', serif;
    font-size: 1rem;
    font-weight: 400;
    margin-bottom: 0.8rem;
    color: #c9a882;
  }

  .footer-company p {
    font-size: 0.88rem;
    opacity: 0.7;
    margin-bottom: 0.4rem;
    line-height: 1.5;
  }

  /* BOTTOM BAR */
  .footer-bottom {
    border-top: 1px solid rgba(245,243,238,0.1);
    text-align: center;
    padding: 1.2rem 2rem;
  }

  .footer-bottom p {
    font-size: 0.8rem;
    opacity: 0.45;
    letter-spacing: 0.5px;
  }

  /* RESPONSIVE */
  @media (max-width: 900px) {
    .footer-container {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      text-align: center;
      padding: 3.5rem 2rem 2.5rem;
    }

    .footer-brand {
      align-items: center;
    }

    .footer-logo {
      justify-content: center;
    }

    .footer-company {
      justify-self: center;
      text-align: center;
    }

    .footer-links {
      border: none;
      border-top: 1px solid rgba(245,243,238,0.12);
      border-bottom: 1px solid rgba(245,243,238,0.12);
      padding: 2rem 0;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem 2rem;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>