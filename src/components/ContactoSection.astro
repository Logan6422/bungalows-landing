<style>
  .contact-section {
    background: #6A8E72;
    padding: 8rem 2rem;
    display: flex;
    justify-content: center;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  /* Decoración de fondo sutil */
  .contact-section::before {
    content: '';
    position: absolute;
    width: 500px;
    height: 500px;
    border-radius: 50%;
    background: rgba(255,255,255,0.04);
    top: -200px;
    right: -100px;
    pointer-events: none;
  }

  .contact-section::after {
    content: '';
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    background: rgba(62, 42, 31, 0.08);
    bottom: -100px;
    left: -50px;
    pointer-events: none;
  }

  .contact-content {
    max-width: 680px;
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .contact-label {
    font-size: 0.85rem;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: #3E2A1F;
    opacity: 0.8;
    font-weight: 500;
  }

  .contact-section h2 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 4vw, 3.2rem);
    font-weight: 400;
    color: #F5F3EE;
    margin: 0;
  }

  .contact-section p {
    font-size: 1.15rem;
    line-height: 1.8rem;
    color: #F5F3EE;
    opacity: 0.88;
    margin: 0.5rem 0 1.5rem;
    max-width: 520px;
  }

  /* BOTONES */
  .contact-links {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .contact-btn {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    padding: 0.9rem 2rem;
    border-radius: 40px;
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    background: #3E2A1F;
    color: #F5F3EE;
    transition: all 0.35s ease;
    border: 1.5px solid transparent;
  }

  .contact-btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.2);
    background: #2a1c15;
  }

  .contact-btn.whatsapp:hover {
    background: #25D366;
    border-color: #25D366;
  }

  .contact-btn.outline {
    background: transparent;
    border-color: #F5F3EE;
    color: #F5F3EE;
  }

  .contact-btn.outline:hover {
    background: #F5F3EE;
    color: #3E2A1F;
  }

  /* RESPONSIVE */
  @media (max-width: 768px) {
    .contact-section {
      padding: 5rem 1.5rem;
    }

    .contact-links {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      width: 100%;
    }

    .contact-btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }
</style>